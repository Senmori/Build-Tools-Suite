<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <Appenders>
        <TextAreaAppender name="JavaFXLogger">
            <PatternLayout pattern="%p - %m%n"/>
        </TextAreaAppender>
    </Appenders>
    <Loggers>
        <Root level="debug">
            <AppenderRef ref="JavaFXLogger"/>
        </Root>
    </Loggers>
</Configuration>
